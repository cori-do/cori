{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://cori.do/schemas/Plan.schema.json",
    "title": "Plan",
    "type": "object",
    "additionalProperties": false,
    "required": ["steps"],
    "properties": {
      "plan_id": { "type": "string", "minLength": 1, "maxLength": 256 },
      "name": { "type": "string", "minLength": 1, "maxLength": 256 },
      "summary": { "type": "string", "minLength": 1, "maxLength": 4096 },
      "steps": {
        "type": "array",
        "minItems": 1,
        "items": { "$ref": "#/$defs/Step" }
      },
      "meta": {
        "type": "object",
        "description": "Free-form extension metadata (non-authoritative).",
        "additionalProperties": true
      }
    },
    "$defs": {
      "StepKind": {
        "type": "string",
        "enum": ["query", "mutation", "control"]
      },
      "Step": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "kind", "action", "inputs"],
        "properties": {
          "id": { "type": "string", "minLength": 1, "maxLength": 256 },
          "kind": { "$ref": "#/$defs/StepKind" },
          "action": {
            "type": "string",
            "minLength": 1,
            "maxLength": 256,
            "description": "Must match an ActionDefinition.name."
          },
          "inputs": {
            "type": "object",
            "description": "Typed inputs validated against the ActionDefinition.input_schema by the runtime.",
            "additionalProperties": true
          },
  
          "depends_on": {
            "type": "array",
            "items": { "type": "string", "minLength": 1, "maxLength": 256 },
            "uniqueItems": true,
            "description": "Optional explicit dependencies on earlier step IDs."
          },
  
          "foreach": {
            "type": "object",
            "additionalProperties": false,
            "required": ["items_ref", "item_alias", "body"],
            "properties": {
              "items_ref": {
                "type": "string",
                "minLength": 1,
                "maxLength": 512,
                "description": "Reference to a list produced by a previous step (e.g., $.steps.s2.output.ticket_ids)."
              },
              "item_alias": { "type": "string", "minLength": 1, "maxLength": 64 },
              "body": {
                "type": "array",
                "minItems": 1,
                "items": { "$ref": "#/$defs/Step" },
                "description": "Steps to execute for each item."
              }
            }
          },
  
          "paginate": {
            "type": "object",
            "additionalProperties": false,
            "required": ["cursor_ref", "page_size"],
            "properties": {
              "cursor_ref": {
                "type": "string",
                "minLength": 1,
                "maxLength": 512,
                "description": "Reference to a cursor field in the previous step output."
              },
              "page_size": { "type": "integer", "minimum": 1, "maximum": 1000 }
            }
          },
  
          "meta": {
            "type": "object",
            "description": "Free-form step metadata (non-authoritative).",
            "additionalProperties": true
          }
        }
      }
    }
  }
  